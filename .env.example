# InfluxDB Konfiguration (Docker Container)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=heizung-monitoring-token-2024
INFLUXDB_ORG=heizung-monitoring
INFLUXDB_BUCKET=heizung-daten

# InfluxDB Admin-Zugangsdaten (für Setup)
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=heizung123!

# Grafana Admin-Zugangsdaten
GRAFANA_ADMIN_PASSWORD=heizung123!

# DHT22 Heizungsraum-Sensor
DHT22_PIN=18
DHT22_NAME=Heizungsraum

# Messintervalle (in Sekunden)
HEATING_MEASUREMENT_INTERVAL=30
ROOM_MEASUREMENT_INTERVAL=60
MONITORING_INTERVAL=30

# Logging-Konfiguration
LOG_LEVEL=INFO
LOG_FILE=heizung-monitor.log

# 1-Wire Sensor Pfad
W1_THERMAL_PATH=/sys/bus/w1/devices

# Logging Konfiguration
LOG_LEVEL=INFO
LOG_FILE=/var/log/heizung-monitor.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Heizkreis-Konfiguration (optional - überschreibt YAML-Datei)
# OBERGESCHOSS_FLOW=28-0000000001
# OBERGESCHOSS_RETURN=28-0000000002
# ERDGESCHOSS_FLOW=28-0000000003
# ERDGESCHOSS_RETURN=28-0000000004
# KELLER_FLOW=28-0000000005
# KELLER_RETURN=28-0000000006
# WAERMEPUMPE_FLOW=28-0000000007
# WAERMEPUMPE_RETURN=28-0000000008

# Alarm-System
ENABLE_EMAIL_ALERTS=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=deine-email@gmail.com
EMAIL_PASSWORD=dein-app-passwort
EMAIL_TO=admin@beispiel.de

# Grafana Integration
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=dein-grafana-api-key
AUTO_CREATE_DASHBOARDS=true

# System-Optionen
ENABLE_EFFICIENCY_ANALYSIS=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_PREDICTIVE_MAINTENANCE=false
